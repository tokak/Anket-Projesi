@model UpdateSurveyDto

@{
    ViewData["Title"] = "Anket Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; 
}



<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-pencil-alt mr-2"></i> Anket Bilgilerini Güncelle
        </h3>
    </div>
    <form asp-area="Admin" asp-controller="Survey" asp-action="Update" method="post">
        @Html.AntiForgeryToken()
        <div class="card-body">
            <input type="hidden" asp-for="Id" /> 

            <div class="row g-3"> 
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Title">Anket Başlığı</label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Örn: Müşteri Memnuniyet Anketi">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
               
                <div class="form-group">
                    <label asp-for="Url">Anket URL'si</label> 
                    <input type="text" asp-for="Url" class="form-control" placeholder="Örn: /anketler/musteri-memnuniyeti">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Description">Anket Açıklaması</label> 
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Anket hakkında detaylı bilgi (isteğe bağlı)"></textarea> 
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group form-check mt-3">
            <input type="checkbox" asp-for="IsActive" class="form-check-input" id="isActiveCheck"> 
                <label class="form-check-label" for="isActiveCheck">Anket Aktif mi?</label> 
                <span asp-validation-for="IsActive" class="text-danger d-block"></span> 
            </div>

        </div>
        <div class="card-footer d-flex justify-content-end"> 
            <a href="@Url.Action("Index", "Survey", new { area = "Admin" })" class="btn btn-secondary mr-2">
                <i class="fas fa-arrow-left"></i> İptal ve Listeye Dön
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Güncelle
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}