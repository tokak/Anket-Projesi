@{
    Layout = null; 
    ViewData["Title"] = "Anket Bulunamadı";
}

<style>
    .error-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 70vh; 
        text-align: center;
        padding: 2rem;
        background-color: #f8f9fa; 
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        max-width: 800px; 
        margin: 4rem auto; 
    }

    .error-icon {
        font-size: 5rem; 
        color: #dc3545; 
        margin-bottom: 1.5rem;
    }

    .error-title {
        font-size: 2.8rem;
        color: #343a40;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .error-message {
        font-size: 1.3rem;
        color: #6c757d;
        line-height: 1.6;
        margin-bottom: 2rem;
        max-width: 600px;
    }

    .error-buttons .btn {
        margin: 0.5rem;
        padding: 0.8rem 2rem;
        font-size: 1.1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .error-buttons .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .error-buttons .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .error-container {
            padding: 1.5rem;
            margin: 2rem auto;
            min-height: 60vh;
        }

        .error-icon {
            font-size: 4rem;
        }

        .error-title {
            font-size: 2.2rem;
        }

        .error-message {
            font-size: 1.1rem;
        }

        .error-buttons .btn {
            padding: 0.6rem 1.5rem;
            font-size: 1rem;
        }
    }
</style>

<div class="error-container">
    <i class="fas fa-exclamation-circle error-icon"></i> <h1 class="error-title">Anket Bulunamadı</h1>
    <p class="error-message">
        Aradığınız anket mevcut değil, silinmiş veya henüz aktif hale getirilmemiş olabilir.
        Lütfen bağlantıyı kontrol edin veya farklı bir anket aramayı deneyin.
    </p>
    <div class="error-buttons">
        <a href="@Url.Action("Login", "Account", new{area=""})" class="btn btn-primary">Login Sayfasına Dön</a>

    </div>
</div>

@section Scripts {
    }