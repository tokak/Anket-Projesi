@model ForgotPasswordDto

@{
    Layout = null;
    ViewData["Title"] = "Şifremi Unuttum";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Anket Sistemi</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .main-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(to right, rgba(106, 17, 203, 0.9), rgba(37, 117, 252, 0.9));
            padding: 20px;
        }

        .login-card {
            max-width: 450px;
            width: 100%;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15);
            background-color: #ffffff;
            opacity: 0;
            animation: fadeIn 0.8s forwards;
        }

        @@keyframes fadeIn {
            to {
                opacity: 1;
            }
        }

        .login-card .card-body {
            padding: 2.5rem;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 1.5rem;
        }

            .logo-container i {
                font-size: 3rem;
                color: #4a56e2;
            }

        .card-title {
            font-weight: 700;
            color: #333;
        }

        .form-floating .form-control {
            border-radius: 0.5rem;
            padding-left: 2.5rem;
        }

        .form-floating > label {
            padding-left: 2.5rem;
        }

        .form-floating .input-icon {
            position: absolute;
            top: 50%;
            left: 1rem;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .password-toggle-icon {
            position: absolute;
            top: 50%;
            right: 1rem;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d;
        }

        .form-check-label {
            font-size: 0.9rem;
        }

        .btn-primary {
            font-weight: 600;
            padding: 0.75rem;
            border-radius: 0.5rem;
            background-color: #4a56e2;
            border-color: #4a56e2;
            transition: background-color 0.2s, box-shadow 0.2s;
        }

            .btn-primary:hover {
                background-color: #3b46c4;
                border-color: #3b46c4;
                box-shadow: 0 0.25rem 0.75rem rgba(74, 86, 226, 0.4);
            }

        .bottom-links a {
            font-size: 0.9rem;
            text-decoration: none;
            color: #4a56e2;
            font-weight: 500;
        }

            .bottom-links a:hover {
                text-decoration: underline;
            }

        .text-danger {
            font-size: 0.8rem;
        }

        /* Düzeltme ve Eklemeler için stiller */
        .btn-google {
            background-color: #ffffff;
            color: #495057;
            border: 1px solid #ced4da;
            transition: background-color 0.2s, box-shadow 0.2s;
            font-weight: 600;
            padding: 0.75rem;
            border-radius: 0.5rem;
        }

            .btn-google:hover {
                background-color: #f8f9fa;
                border-color: #adb5bd;
            }

        .divider-text {
            position: relative;
            text-align: center;
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
            color: #6c757d;
        }

            .divider-text span {
                padding: 0 15px;
                background-color: #ffffff;
                position: relative;
                z-index: 2;
            }

            .divider-text:after {
                content: "";
                position: absolute;
                width: 100%;
                height: 1px;
                background-color: #dee2e6;
                left: 0;
                top: 50%;
                z-index: 1;
            }
    </style>
</head>

<body>
    <div class="main-container">
        <div class="form-card">
            <div class="card-body">
                <div class="logo-container">
                    <i class="fa-solid fa-key"></i>
                </div>
                <h3 class="card-title mb-2 text-center">@ViewData["Title"]</h3>
                <p class="text-muted text-center mb-4">
                    Sıfırlama linki gönderebilmemiz için lütfen kayıtlı e-posta adresinizi girin.
                </p>
                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    <div class="form-floating mb-4 position-relative">
                        <span class="input-icon"><i class="fa-solid fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="E-posta adresiniz" required autofocus />
                        <label asp-for="Email">E-posta Adresi</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Sıfırlama Linki Gönder</button>
                    </div>
                </form>
                <div class="text-center mt-4 bottom-link">
                    <a asp-action="Login"><i class="fa-solid fa-arrow-left me-1"></i> Giriş sayfasına dön</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>